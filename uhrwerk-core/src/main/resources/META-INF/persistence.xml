<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="io.qimia.uhrwerk.models">
        <description>
            Uhrwerk Persistence Models
        </description>

        <class>io.qimia.uhrwerk.models.store.ConnectionConfig</class>
        <class>io.qimia.uhrwerk.models.store.DependencyConfig</class>
        <class>io.qimia.uhrwerk.models.store.JobLog</class>
        <class>io.qimia.uhrwerk.models.store.PartitionLog</class>
        <class>io.qimia.uhrwerk.models.store.StepConfig</class>
        <class>io.qimia.uhrwerk.models.store.TableInfo</class>
        <class>io.qimia.uhrwerk.models.store.TargetConfig</class>
        <class>io.qimia.uhrwerk.models.store.TaskLog</class>


        <properties>
            <!-- configure store properties here -->
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:./sample_h2.db;DB_CLOSE_DELAY=-1;MVCC=TRUE" />
            <property name="javax.persistence.jdbc.user" value="sa" />
            <property name="javax.persistence.jdbc.password" value="" />

<!--            <property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC" />-->
<!--            <property name="javax.persistence.jdbc.url" value="jdbc:sqlite:sample.db" />-->
<!--            <property name="javax.persistence.jdbc.user" value="" />-->
<!--            <property name="javax.persistence.jdbc.password" value="" />-->
<!--            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLiteDialect" />-->
<!--            <property name="hibernate.configConnection.release_mode" value="auto" />-->
<!--            <property name="hibernate.transaction.auto_close_session" value="true" />-->
<!--            <property name="org.hibernate.flushMode" value="COMMIT" />-->


            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="create" />

        </properties>

    </persistence-unit>

</persistence>
